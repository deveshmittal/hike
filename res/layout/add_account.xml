<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/addAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="70dp"
        android:text="Register New Number!" />

    <Button
        android:id="@+id/addAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="Next" />
    
        <Button
        android:id="@+id/addAccountFinishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:visibility="gone"
        android:text="Add!" />
        
    <com.bsb.hike.view.CustomFontEditText
                android:id="@+id/addAccountNum"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:layout_marginTop="180dp"
		        android:layout_centerHorizontal="true"
                android:background="@drawable/bg_country_picker_selector"
                android:ems="10"
                android:hint="@string/phone_num"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/selected_country"
                android:textSize="18dp"
                android:visibility="visible" >

                <requestFocus />
            </com.bsb.hike.view.CustomFontEditText>

</RelativeLayout>
