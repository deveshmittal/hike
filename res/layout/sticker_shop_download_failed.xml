<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" 
    android:gravity="center"
    android:orientation="vertical">

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/no_internet_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/art_no_internet"
            android:layout_marginBottom="30dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
             
        <com.bsb.hike.view.CustomFontTextView 
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:text="@string/shop_loading_failed_no_internet" />
        
         <com.bsb.hike.view.CustomFontTextView 
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="8dp"
            android:text="@string/shop_loading_failed_switch_on"
            android:visibility="visible" />
         </LinearLayout>

</LinearLayout>