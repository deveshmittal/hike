<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_incall"
    android:visibility="visible" >

    <FrameLayout
        android:id="@+id/voip_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fullPhoneNumberView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="ProfileImage" >

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:src="@drawable/avatar_stroke" />

        <ImageView
            android:id="@+id/fullvoipContactPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="Profile Image"
            android:src="@drawable/ic_default_avatar_group" />
    </FrameLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/fullPhoneNumberView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="INCOMING CALL"
        android:textColor="@color/white" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/fullCallerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullPhoneNumberView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="NAME GOES HERE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/fullacceptButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/greenarrow"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/fulldeclineButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="34dp"
        android:background="@drawable/redarrow"
        android:scaleType="centerInside" />
    

<FrameLayout
        android:id="@+id/voip_slider_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:contentDescription="SliderImage" >
    <ImageView
        android:id="@+id/fullcallSlider"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"        
        android:src="@drawable/callicon" 
        android:background="@drawable/slider_oval"/>
    </FrameLayout>

<ImageView
    android:id="@+id/fullSpeakerButton"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="47dp"
    android:layout_marginRight="45dp"
    android:layout_toLeftOf="@+id/voip_slider_container"
    android:scaleType="centerInside"
    android:src="@drawable/speaker_off"
    android:visibility="invisible" />

<ImageView
    android:id="@+id/fullMicButton"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="47dp"
    android:layout_marginLeft="45dp"
    android:layout_toRightOf="@+id/voip_slider_container"
    android:src="@drawable/voip_mute_off" 
    android:visibility="invisible"/>

</RelativeLayout>
