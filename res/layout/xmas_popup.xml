<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xmas_popup_view"
   	android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:visibility="gone" >

   <ImageView 
    	android:id="@+id/snowman_footer"
  		android:layout_width="wrap_content"
  		android:layout_height="match_parent"
  		android:scaleType="fitEnd"
  		android:layout_gravity="bottom"
  		android:src="@drawable/snowbed_xmas_popup" >
	</ImageView>

	<RelativeLayout 
	    android:id="@+id/xmas_popup_parent"
	    android:layout_width="@dimen/diwali_popup_width"
	    android:layout_height="@dimen/diwali_popup_height"
	    android:layout_gravity="center"
	    android:background="@drawable/bg_diwali_popup" >
	
	    <LinearLayout
	        android:id="@+id/button_container"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_alignParentBottom="true"
	        android:orientation="horizontal" >
	
	        <com.bsb.hike.view.CustomFontButton
	            android:id="@+id/btn_cancel"
	            style="@style/DiwaliPopupButton"
	            android:background="@drawable/diwali_popup_left_btn"
	            android:textColor="@color/white"
	            android:textStyle="italic"
	            android:text="@string/no_thanks" />
	
	        <View
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:layout_above="@id/button_container"
	            android:layout_marginBottom="7dp"
	            android:layout_marginTop="7dp"
	            android:background="@color/diwali_popup_divider" />
	
	        <com.bsb.hike.view.CustomFontButton
	            android:id="@+id/btn_ok"
	            style="@style/DiwaliPopupButton"
	            android:background="@drawable/diwali_popup_right_btn"
	            android:textColor="@color/diwali_popup_btn_ok_txt"
	            android:text="@string/wish_now"
	            android:textStyle="bold|italic" />
	    </LinearLayout>
	
	    <View
	        android:id="@+id/divider"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_above="@id/button_container"
	        android:background="@color/diwali_popup_divider" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@id/divider"
	        android:background="@drawable/pattern_bg_diwali_popup"
	        android:padding="15dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <com.bsb.hike.view.CustomFontTextView
	            android:id="@+id/festive_header"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:shadowColor="#4D000000"
	            android:shadowDy="0.7"
	            android:shadowRadius="0.7"
	            android:text="@string/merry_christmas"
	            android:textColor="@color/white"
	            android:textSize="20dp"
	            android:textStyle="bold|italic" />

	        <com.bsb.hike.view.CustomFontTextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/send_sticker_joy"
	            android:textColor="@color/white"
	            android:textSize="16dp" />
	
	        <ImageView
	            android:id="@+id/sticker_popup_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="25dp"
	            android:src="@drawable/merryxmas" />
	    </LinearLayout>
	
	</RelativeLayout>
	 
</FrameLayout>
