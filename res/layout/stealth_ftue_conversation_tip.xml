<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/stealth_tip_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
		android:layout_alignParentRight="true"        
        android:layout_centerVertical="true"
        android:background="@drawable/popup_button_bg_selector"
	    android:scaleType="centerInside"
        android:src="@drawable/ic_stealth_tip_cross" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tip"
        android:layout_alignTop="@+id/tip"
        android:layout_toLeftOf="@id/close"
        android:layout_centerVertical="true"
        android:background="@color/stealth_tip_divider" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_stealth_intro_2" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/divider"
        android:layout_toRightOf="@id/pointer"
        android:paddingBottom="5dp"
        android:text="@string/stealth_tap_and_hold_tip"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>