<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xmas_popup_view"
   	android:layout_width="match_parent"
 	android:layout_height="match_parent" >

   <ImageView 
    	android:id="@+id/snowman_footer"
  		android:layout_width="wrap_content"
  		android:layout_height="match_parent"
  		android:scaleType="fitEnd"
  		android:layout_gravity="bottom"
		android:src="@drawable/art_snow_new_year"
		android:visibility="gone" >
	</ImageView>

	<RelativeLayout 
	    android:id="@+id/festive_popup_parent"
	    android:layout_width="@dimen/diwali_popup_width"
	    android:layout_height="@dimen/diwali_popup_height"
	    android:layout_gravity="center"
	    android:background="@color/happy_new_year_popup"
	    android:visibility="gone" >
	
	    <LinearLayout
	        android:id="@+id/button_container"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_alignParentBottom="true"
	        android:orientation="horizontal" >
	
	        <com.bsb.hike.view.CustomFontButton
	            android:id="@+id/btn_ok"
	            style="@style/DiwaliPopupButton"
	            android:background="@drawable/diwali_popup_right_btn"
	            android:textColor="@color/white"
	            android:text="@string/wish_now"
	            android:textStyle="bold|italic" />
	    </LinearLayout>
	
	    <View
	        android:id="@+id/divider"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_above="@id/button_container"
	        android:alpha="0.2"
	        android:background="@color/black" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@id/divider"
	        android:padding="15dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <com.bsb.hike.view.CustomFontTextView
	            android:id="@+id/festive_header"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:shadowColor="#4D000000"
	            android:shadowDy="0.7"
	            android:shadowRadius="0.7"
	            android:text="@string/happy_new_year"
	            android:textColor="@color/white"
	            android:textSize="20dp"
	            android:textStyle="bold|italic" />

	        <com.bsb.hike.view.CustomFontTextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/send_sticker_joy"
	            android:textColor="@color/white"
	            android:textSize="16dp" />
	
	        <ImageView
	            android:id="@+id/sticker_popup_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="25dp"
	            android:src="@drawable/hikinnewyear" />
	    </LinearLayout>

	    <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_cross_popup" />
	
	</RelativeLayout>
	 
</FrameLayout>
