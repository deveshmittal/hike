<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1038" >

    <include
        layout="@layout/welcome_activity_topbar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="834"
        android:orientation="vertical" >
        
        <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="418"
        	android:orientation="vertical" >
        	
        	<include layout="@layout/tutorial_fragments"/>
        </RelativeLayout>
        
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/tc_continue_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="192"
        android:gravity="top"
        android:visibility="visible" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_continue"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:text="@string/get_started"
            android:textColor="@drawable/signup_btn_text"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/getting_started"
                android:textColor="@drawable/signup_btn_text"
                android:textSize="15sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/loveIndia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/with_love"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
             />
        </RelativeLayout>

</LinearLayout>