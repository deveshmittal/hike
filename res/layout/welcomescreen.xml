<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1038"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:layout_height="48dp"
        android:layout_gravity="right|top"
        android:orientation="horizontal" >
        
	    <View
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="bottom"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:background="#eaeced" />
	        
	    <LinearLayout
	        android:id="@+id/terms_and_conditions"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="right|top"
	        android:orientation="horizontal"
	        android:background="@drawable/bg_overflow_menu_selector" >
	
	        <com.bsb.hike.view.CustomFontTextView
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="bottom"
	            android:gravity="center"
	            android:paddingRight="11dp"
	            android:paddingLeft="11dp"
	            android:text="@string/terms"
	            android:textColor="#adb2b9"
	            android:textSize="16sp" />
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/hike_logo_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="846"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <android.support.v4.view.ViewPager
            android:id="@+id/tutorial_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="754" /> 

        <com.viewpagerindicator.IconPageIndicator
            android:id="@+id/tutorial_indicator"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="112"
            android:layout_gravity="center"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/tc_continue_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_weight="192"
        android:visibility="visible" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_continue"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:text="@string/get_started"
            android:textColor="@drawable/signup_btn_text"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
            	android:textColor="@drawable/signup_btn_text"
            	android:textSize="15sp"
            	android:textStyle="bold|italic"
                android:text="@string/pulling_digits_signup" />
        </LinearLayout>

    </RelativeLayout>

    
</LinearLayout>