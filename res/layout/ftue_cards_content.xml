<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:weightSum="1236" >

    <FrameLayout
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="932" >

        <ImageView
            android:id="@+id/card_header_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="33dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/card_header_img_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="74dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/card_small_img_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="304"
        android:orientation="vertical"
        android:paddingLeft="@dimen/card_header_text_padding_left"
        android:paddingRight="@dimen/card_header_text_padding_right" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/card_txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/welcome_to_hike"
            android:textColor="#464646"
            android:textStyle="italic"
            android:textSize="@dimen/ftue_card_text_header_font" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/card_txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ftue_welcome_card_msg"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#959595"
            android:textStyle="italic"
            android:textSize="@dimen/ftue_card_text_msg_font" />
    </LinearLayout>

</LinearLayout>