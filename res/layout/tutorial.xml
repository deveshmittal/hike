<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hike="http://schemas.android.com/apk/res/com.bsb.hike"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bckg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:src="@drawable/stickers_intro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/tutorial_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDy="0.6"
            android:shadowRadius="0.6"
            android:text="@string/tutorial_sticker_header"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            hike:font="omnes" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/tutorial_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDy="0.4"
            android:shadowRadius="0.4"
            android:text="@string/tutorial_sticker_info"
            android:textColor="#b9e0ff"
            android:textSize="14sp" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_continue"
            style="@style/SignupButton.Text.Bold.Button"
            android:layout_marginTop="@dimen/tutorial_button_margin"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:text="@string/next_signup"
            hike:font="omnes" />
    </LinearLayout>

</LinearLayout>