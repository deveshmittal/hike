<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="754" >

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/tutorial_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="200"
        android:text="@string/tutorial1_header_title"
        android:layout_marginBottom="8dp"
        android:clickable="true" 
        android:onClick="onHikeIconClicked"
        style="@style/SignupHeader" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="554"
        android:orientation="vertical" >
        
        <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="418"
        	android:orientation="vertical" >
        	
        	<ImageView
            	android:id="@+id/tutorial_img"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/tutorial1_img"
            	android:layout_centerHorizontal="true"
            	android:scaleType="centerInside"
            	android:layout_alignParentTop="true" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="21dp"/>
        
        <ImageView
            android:id="@+id/platform_icons"
            android:src="@drawable/icons_platforms"
            android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:scaleType="centerInside"
            android:layout_height="0dp"
            android:layout_weight="136"
            android:visibility="visible" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="21dp"/>
        

    </LinearLayout>

</LinearLayout>