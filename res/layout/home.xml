<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/overflow_anchor"
        android:layout_width="190dp"
        android:layout_height="1dp"
        android:layout_gravity="right" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
     
    <LinearLayout
        android:id="@+id/home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <ImageView 
             android:id="@+id/action_bar_img"
             android:layout_width= "match_parent"
             android:layout_height="48dp"
             android:visibility="gone"
             android:scaleType="fitXY" />
               
        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_home_tab_unselected" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/network_error"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"/>
    </RelativeLayout>
    
    <ViewStub android:id="@+id/addfriends_popup_viewstub"
         android:inflatedId="@+id/addfriend_popup"
         android:layout="@layout/addfriends_pop_up"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />
    
    <ViewStub android:id="@+id/stealth_double_tap_tip_viewstub"
         android:inflatedId="@+id/stealth_double_tap_tip"
         android:layout_marginLeft="5dp"
         android:layout="@layout/tool_tip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="40dp" />
</FrameLayout>