<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f2f1"
            android:orientation="vertical"
            android:paddingBottom="23dp"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:paddingTop="23dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:src="@drawable/shocked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"                
                android:gravity="center"
                android:text="@string/delete_account_heading"
                android:textColor="@color/rec_progress"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/delete_account_description"
                android:textColor="@color/chat_color"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading_2"
            android:textSize="12sp" />

        <include
            android:layout_centerHorizontal="true"
            layout="@layout/country_phone" />

        <Button
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_phone_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_button_selector"
            android:onClick="deleteAccountClicked"
            android:text="@string/delete_my_account"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>