<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	<com.bsb.hike.ui.utils.RecyclingImageView
        android:id="@+id/group_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:background="@drawable/ftue_broadcast_bg"
        android:src="@drawable/ic_default_avatar_broadcast" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/broadcast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawablePadding="4dp"
        android:paddingBottom="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="8dp"
        android:textSize="17sp"
        android:visibility="visible"
        android:text="@string/broadcast_ftue_message" />

	        <com.bsb.hike.view.CustomFontButton
	            android:id="@+id/btn_broadcast_ftue"
	            android:layout_width="180dp"
	            android:layout_height="48dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/signup_button"
	            android:text="@string/got_it"
	            android:textColor="@drawable/signup_btn_text"
	            android:textSize="15sp"
	            android:textStyle="bold|italic" />
	           
</LinearLayout>