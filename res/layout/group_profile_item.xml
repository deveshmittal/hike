<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_weight="1"
    android:background="@drawable/updates_bg_selector"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="@dimen/medium_avatar"
        android:layout_height="@dimen/medium_avatar"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="5dp" >

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="@dimen/medium_avatar"
            android:layout_height="@dimen/medium_avatar" >

            <ImageView
                android:id="@+id/avatar"
                style="@style/AvatarStyle.Padding"
                android:src="@drawable/ic_avatar1" />

            <ImageView
                android:id="@+id/avatar_frame"
                style="@style/AvatarStyle"
                android:src="@drawable/frame_avatar_medium_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/add_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_add_participant"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/image_container"
        android:orientation="vertical" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Rishabh Sharma"
            android:textColor="@color/updates_text"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <com.bsb.hike.view.LinkedTextView
            android:id="@+id/main_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:45"
            android:textColor="@color/participant_last_seen"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView 
        android:id="@+id/owner_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_group_owner"
        android:paddingTop="8dp"
        android:visibility="gone"/>
</RelativeLayout>