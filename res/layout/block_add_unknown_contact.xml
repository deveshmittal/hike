<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62.5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_unknwon_contacts"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontButton
            style="@style/BlockAddUnknownContact"
            android:onClick="blockUser"
            android:text="@string/block_title" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="#3DFFFFFF" />

        <com.bsb.hike.view.CustomFontButton
            style="@style/BlockAddUnknownContact"
            android:onClick="addToContacts"
            android:text="@string/add" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentTop="true"
        android:background="#60787878" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="#60787878" />

</RelativeLayout>