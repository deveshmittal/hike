<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="?actionBarItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@id/abs__up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_back" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/ActionBarText.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/done_container"
        android:layout_width="wrap_content"
        android:minWidth="56dp"
        android:layout_height="32dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_green_btn_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ic_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_done" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/done_text"
            style="@style/ActionBarText.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center" />
    </LinearLayout>

    <com.bsb.hike.view.CustomFontButton
        android:id="@+id/post_btn"
        android:layout_width="wrap_content"
        android:minWidth="56dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_update_post_btn"
        android:textColor="@drawable/action_bar_btn_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />
    
</RelativeLayout>