<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="251dp"
    android:layout_height="290dp"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.bsb.hike.view.CustomFontButton
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/valentine_button_selector"
        android:text="@string/valentine_nudge_button"
        android:textColor="@color/valentine_nudge_white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/divider_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ok_btn"
        android:orientation="vertical" >

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1F330000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_container"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_valentine_nudge_dialog" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/valentine_nudge_header"
            android:textColor="@color/valentine_nudge_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="@string/valentine_nudge_body"
            android:textColor="@color/valentine_nudge_white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>