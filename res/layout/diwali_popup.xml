<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/diwali_popup_width"
    android:layout_height="@dimen/diwali_popup_height"
    android:background="@drawable/bg_diwali_popup" >

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_cancel"
            style="@style/DiwaliPopupButton"
            android:background="@drawable/diwali_popup_left_btn"
            android:text="@string/dismiss" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@id/button_container"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/diwali_popup_divider" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_ok"
            style="@style/DiwaliPopupButton"
            android:background="@drawable/diwali_popup_right_btn"
            android:text="@string/wish_now"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/button_container"
        android:background="@color/diwali_popup_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider"
        android:background="@drawable/pattern_bg_diwali_popup"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.bsb.hike.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#4D000000"
            android:shadowDy="0.7"
            android:shadowRadius="0.7"
            android:text="@string/wish_you"
            android:textColor="@color/diwali_popup_txt"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/sticker_diwali_popup" />
    </LinearLayout>

</RelativeLayout>