<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_nudge_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_nudge_big" />

    <com.bsb.hike.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@string/nudge"
        android:textColor="@color/lightblack"
        android:textSize="19sp"
        android:textStyle="bold" />

    <com.bsb.hike.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@string/nudge_info"
        android:textColor="#868684"
        android:textSize="15sp" />

    <View
        android:id="@+id/dropshadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_thread_divider_profile" />

    <com.bsb.hike.view.CustomFontButton
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_alert_btn_center"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@android:string/ok"
        android:textColor="@color/lightblack"
        android:textSize="15sp" />

</LinearLayout>