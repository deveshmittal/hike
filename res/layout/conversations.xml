<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@id/android:list"
        style="@style/HomeList" />

    <ScrollView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ftue_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_empty_chat" />

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/empty_chat"
                    android:textColor="#73726f"
                    android:textSize="16dp" />

                <com.bsb.hike.view.CustomFontButton
                    android:id="@+id/start_chat_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_blue_btn_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/start_chat"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ftue_not_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="@string/ftue_grid_string"
                    android:textColor="@color/list_item_subtext"
                    android:textSize="18sp" />

                <GridView
                    android:id="@+id/ftue_grid"
                    android:layout_width="270dp"
                    android:layout_height="225dp"
                    android:background="@drawable/bg_ftue_grid"
                    android:columnWidth="0dp"
                    android:scrollbars="none"
                    android:gravity="center"
                    android:numColumns="3" />
                
				<LinearLayout
				    android:layout_width="260dp"
				    android:layout_height="32dp"
				    android:layout_marginTop="20dp"
				    android:gravity="center"
				    android:orientation="horizontal" >

				    <com.bsb.hike.view.CustomFontButton
				        android:id="@+id/invite"
				        style="@style/FTUEButtons"
				        android:background="@drawable/bg_green_btn_selector"
				        android:singleLine="true"
				        android:text="@string/invite_friends" />

				    <View
				        android:layout_width="8dp"
				        android:layout_height="0dp" />

				    <com.bsb.hike.view.CustomFontButton
				        android:id="@+id/new_chat"
				        style="@style/FTUEButtons"
				        android:background="@drawable/bg_blue_btn_selector"
				        android:singleLine="true"
				        android:text="@string/start_new_chat" />
				</LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>