<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alert_box"
    android:orientation="vertical" >

	<com.bsb.hike.view.CustomFontTextView 
	    android:id="@+id/popup_header"
	    android:layout_width="wrap_content"
	    android:layout_height="64dp"
	    android:text="Send 1 SMS as"
	    android:textSize="24dp"
	    android:textStyle="italic"
	    android:gravity="center_vertical"
	    android:textColor="@color/blue_hike"
	    android:paddingLeft="24dp"
	    />    
	    
	<View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blue_hike" />
	
	<LinearLayout
	    android:id="@+id/hike_sms_container"
	    android:layout_width="match_parent"
	    android:layout_height="74dp"
	    android:orientation="horizontal"
	    android:background="@drawable/list_item"
	    android:paddingLeft="28dp"
	    android:clickable="true">
	    
	    <CheckBox
	       android:id="@+id/hike_sms_checkbox"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:button="@drawable/preference_radio_btn"
	       android:layout_gravity="center_vertical"
	       android:clickable="true" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="14dp">
	    
		   <TextView 
		       	android:id="@+id/hike_sms_header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/free_hike_sms"
				android:textColor="@drawable/sms_popup_text_selector"
				android:textSize="18dp" />
		   
		   <TextView 
		       	android:id="@+id/hike_sms_subtext"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/free_hike_sms_subtext"
				android:textColor="@drawable/sms_popup_subtext_selector"
				android:textSize="12dp" />
		   
	    </LinearLayout>
	    
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/native_sms_container"
	    android:layout_width="match_parent"
	    android:layout_height="74dp"
	    android:background="@drawable/list_item"
	    android:orientation="horizontal"
	    android:paddingLeft="28dp"
	    android:clickable="true">
	    
	    <CheckBox
	       android:id="@+id/native_sms_checkbox"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:button="@drawable/preference_radio_btn"
	       android:layout_gravity="center_vertical"
	       android:clickable="true" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="14dp">
	    
		   <TextView 
		       	android:id="@+id/native_sms_header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/regular_sms" 
				android:textColor="@drawable/sms_popup_text_selector"
				android:textSize="18dp"/>
		   
		   <TextView 
		       	android:id="@+id/native_sms_subtext"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/carrier_charges_apply"
				android:textColor="@drawable/sms_popup_subtext_selector"
				android:textSize="12dp" />
		   
	    </LinearLayout>
	    
	</LinearLayout>
	
	<View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1f73716d" />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal">
		
	    <com.bsb.hike.view.CustomFontButton 
	        android:id="@+id/btn_always"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="Always"
	        android:textSize="15dp"
	        android:background="@drawable/list_item"
	        android:textColor="@color/standard_black"
	        />
	    
	    <View
	        android:id="@+id/horizontal_divider"
	        android:layout_width="0.5dp"
	        android:layout_height="match_parent"
	        android:background="#1f73716d" />
	    
	    <com.bsb.hike.view.CustomFontButton 
	        android:id="@+id/btn_just_once"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="Just Once"
	        android:textSize="15dp"
	        android:background="@drawable/list_item"
	        android:textColor="@color/standard_black"
	        />
	</LinearLayout>

</LinearLayout>
