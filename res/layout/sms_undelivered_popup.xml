<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hike_sms_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/hike_sms_header"
            style="@style/UndeliveredPopup.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/free_hike_sms" />

        <com.bsb.hike.view.CustomFontTextView
            style="@style/UndeliveredPopup.Subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:text="@string/from_hike_number" />

        <CheckBox
            android:id="@+id/hike_sms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/preference_radio_btn"
            android:clickable="true" />

        <com.bsb.hike.view.CustomFontTextView
            style="@style/UndeliveredInfo"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/hike_sms_checkbox"
            android:background="@drawable/green_rounded_rectangle"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/hike_sms_info2" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1f73716d" />

    <RelativeLayout
        android:id="@+id/native_sms_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <CheckBox
            android:id="@+id/native_sms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/preference_radio_btn"
            android:clickable="true" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/red_box"
            style="@style/UndeliveredInfo"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/native_sms_checkbox"
            android:background="@drawable/red_rounded_rectangle"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/at_sms_rate" />
        
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/native_sms_header"
            style="@style/UndeliveredPopup.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/regular_sms" />

        <com.bsb.hike.view.CustomFontTextView
            style="@style/UndeliveredPopup.Subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/native_sms_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/red_box"
            android:text="@string/from_your_number" />
        
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1f73716d" />

    <com.bsb.hike.view.CustomFontButton
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item"
        android:text="@string/send"
        android:gravity="center"
        android:textColor="@color/sms_popup"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>