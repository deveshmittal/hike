<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/overflow_anchor"
        android:layout_width="190dp"
        android:layout_height="1dp"
        android:layout_gravity="right" />
    
    <LinearLayout
        android:id="@+id/home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <ImageView 
            android:id="@+id/action_bar_img"
            android:layout_width= "match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/action_bar_img" />

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_home_tab_unselected" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    
    <View
        android:id="@+id/chat_bg_ftue_fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cd000000"
        android:onClick="OnChatBgFtueOverlayClick"
        android:visibility="gone" />
    
    <FrameLayout 
        android:id="@+id/gift_box_layout_view"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_gravity="center"
    	android:visibility="gone"  >
        
        <include layout="@layout/chat_bg_ftue_box" />
    </FrameLayout>
    
</FrameLayout>