<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/txt_img1"
        style="@style/SignupButton.Text.Info"
        android:layout_marginTop="17dp"
        android:text="@string/enter_num_signup" />

    <LinearLayout
        style="@style/SignupButton"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_signup_tb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp" >

        <Button
            android:id="@+id/country_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_country_code"
            android:onClick="onCountryPickerClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowColor="#66FFFFFF"
            android:shadowDy="-0.5"
            android:shadowRadius="0.5"
            android:text="IN +91"
            android:textColor="@color/offwhite"
            android:textSize="15sp" />

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/et_enter_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/phone_num"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="15"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="visible" >

            <requestFocus />
        </com.bsb.hike.view.CustomFontEditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/loading_layout"
            style="@style/SignupButton"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                style="@style/SignupButton.Text.Bold.Loading"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/loading_progress"
                android:text="@string/verifying_num_signup" />
        </RelativeLayout>
        
        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_try_again"
            style="@style/SignupButton.Text.Bold.Button"
            android:textSize="14sp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_network_error"
            android:onClick="onClick"
            android:text="@string/network_error"
            android:visibility="gone" />
    </RelativeLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/invalid_num"
        style="@style/SignupButton.Text.Info"
        android:layout_marginTop="10dp"
        android:text="@string/invalid_num_signup"
        android:textSize="14sp"
        android:visibility="invisible" />

</LinearLayout>