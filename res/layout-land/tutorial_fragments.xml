<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1184" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="675"
        android:gravity="right|bottom"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <ImageView
            android:id="@+id/tutorial_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:src="@drawable/tutorial1_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="509"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tutorial_fragment_header_padding_left" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/tutorial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onHikeIconClicked"
            android:paddingRight="@dimen/tutorial_fragment_title_padding_Right"
            android:layout_marginBottom="24dp"
            android:text="@string/tutorial1_header_title"
            android:gravity="left"
            style="@style/SignupHeader" />

        <ImageView
            android:id="@+id/ic_micromax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/micromax_logo"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>