<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_bg" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_bckg" />

    <RelativeLayout
        android:id="@+id/tc_continue_layout"
        style="@style/T_C_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="invisible" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/terms_and_conditions"
            style="@style/SignupButton.Text.Info"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/t_c"
            android:paddingLeft="50dp"
            android:paddingRight="15dp"
            android:text="@string/terms_privacy"
            android:textSize="12sp" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_continue"
            style="@style/SignupButton.Text.Bold.Button"
            android:layout_below="@id/terms_and_conditions"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:text="@string/a_and_c_signup" />

        <LinearLayout
            android:id="@+id/loading_layout"
            style="@style/SignupButton"
            android:layout_below="@id/terms_and_conditions"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                style="@style/SignupButton.Text.Bold.Loading"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:text="@string/pulling_digits_signup" />
        </LinearLayout>

		<com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_try_again"
            style="@style/SignupButton.Text.Bold.Button"
            android:textSize="14sp"
            android:layout_height="48dp"
            android:layout_below="@id/terms_and_conditions"
            android:background="@drawable/bg_network_error"
            android:onClick="onClick"
            android:text="@string/network_error"
            android:visibility="gone" />        
    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_hi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:src="@drawable/hi_logo_big"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/hike_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/tc_continue_layout"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onHikeIconClicked"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/ic_hike_welcome_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hike_welcome_image" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/hike_logo"
            android:layout_width="@dimen/hike_tag_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:shadowColor="#5A000000"
            android:shadowDy="1.3"
            android:shadowRadius="1.3"
            android:text="@string/hike_tag"
            android:textColor="#faf8f2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
        
        <ImageView
            android:id="@+id/ic_micromax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hike_logo_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/micromax_margin"
            android:src="@drawable/micromax_logo"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>