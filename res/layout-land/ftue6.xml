<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ftue_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standerd_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/nuxCard"
        style="@style/NuxScreenCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="22dp"
        android:paddingTop="15dp" >

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/nuxStickerIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sticker_icon" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ftue_sticker_screen_header"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/ftue_sticker_screen_text"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nuxStickers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sticker_001_as_kikorisa" />

        <ImageView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sticker_001_as_kikorisa" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sticker_012_smooch" />

        <ImageView
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sticker_069_hi" />
    </LinearLayout>

</LinearLayout>