<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/card_header_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_gravity="top"
            android:layout_marginBottom="21dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/card_header_img_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/card_header_img_content_padding_top"
            android:layout_marginBottom="@dimen/card_header_img_content_padding_bottom"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/card_small_img_content"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom|center_horizontal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/card_txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/welcome_to_hike"
            android:textColor="#464646"
            android:textStyle="italic"
            android:textSize="@dimen/ftue_card_text_header_font" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/card_txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/ftue_welcome_card_msg"
            android:textColor="#959595"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/ftue_card_text_msg_font" />
    </LinearLayout>

</LinearLayout>