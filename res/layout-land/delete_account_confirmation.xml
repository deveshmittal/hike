<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"    
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:background="#f1f2f1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/shocked_sticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Schocked humanoid sticker"
            android:paddingBottom="12dp"
            android:paddingTop="23dp"
            android:src="@drawable/shocked" />

        <TextView
            android:id="@+id/del_acc_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="Delete account heading text"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading"
            android:textColor="@color/rec_progress"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/del_acc_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="Delete account description in left half"
            android:gravity="center"
            android:text="@string/delete_account_description"
            android:textColor="@color/chat_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="55"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/del_acc_heading_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="25dp"
            android:contentDescription="Delete account heading in right half"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading_2"
            android:textSize="12sp" />

        <include
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            layout="@layout/country_phone_del_account" />

        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:layout_below="@+id/country_phone_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/red_button_selector"
            android:contentDescription="Delete Account Button"
            android:onClick="deleteAccountClicked"
            android:text="@string/delete_my_account"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>