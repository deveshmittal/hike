<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/manage_account" >

    <com.bsb.hike.view.IconCheckBoxPreference
        icon="ic_auto_download_pref"
        android:defaultValue="true"
        android:key="autoDownloadImagePref"
        android:layout="@layout/icon_preference"
        android:summary="@string/auto_download_image_info"
        android:title="@string/auto_download_image_header"
        android:widgetLayout="@layout/checkbox_widget" />
    <com.bsb.hike.view.IconPreference
        icon="ic_unlink_account_settings"
        android:key="unlinkAccount"
        android:layout="@layout/icon_preference"
        android:summary="@string/unlink_hinttext"
        android:title="@string/unlink_account" />
    <com.bsb.hike.view.IconPreference
        icon="ic_delete_account_settings"
        android:key="deleteAccount"
        android:layout="@layout/icon_preference"
        android:summary="@string/delete_account_msg"
        android:title="@string/delete_account" />
    <com.bsb.hike.view.IconPreference
        icon="ic_fb_priv"
        android:key="unlinkFacebook"
        android:layout="@layout/icon_preference"
        android:summary="@string/unlink_facebook_account_msg"
        android:title="@string/unlink_facebook_account" />
    <com.bsb.hike.view.IconPreference
        icon="ic_twitter_priv"
        android:key="unlinkTwitter"
        android:layout="@layout/icon_preference"
        android:summary="@string/unlink_twitter_account_msg"
        android:title="@string/unlink_twitter_account" />
</PreferenceScreen>