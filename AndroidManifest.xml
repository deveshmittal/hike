<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsb.hike"
    android:installLocation="auto"
    android:versionCode="929"
    android:versionName="3.6.0.1.greenDot" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <permission
        android:name="com.bsb.hike.ui.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.bsb.hike.ui.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- C2DM -->
    <permission
        android:name="com.bsb.hike.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.bsb.hike.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <application
        android:name="com.bsb.hike.HikeMessengerApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/hike_logo_top_bar"
        android:theme="@style/AppTheme" >
        <uses-library
            android:name="com.google.android.maps"
            android:required="false" />

        <service
            android:name="com.bsb.hike.service.HikeService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.bsb.hike.service.ACTION_BIND"/>
            </intent-filter>
        </service>
        <service android:name="com.bsb.hike.service.UpgradeIntentService" />
        <service android:name="com.bsb.hike.GCMIntentService" />

        <activity
            android:name="com.bsb.hike.ui.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Home"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsb.hike.ui.ComposeChatActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_label"
            android:theme="@style/AppTheme.Home"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsb.hike.ui.AddFriendsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.WelcomeActivity"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:theme="@style/NoTitleBar" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.SignupActivity"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.FtueActivity"
            android:label="@string/app_label"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.ChatThread"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsb.hike.ui.HikePreferences"
            android:label="@string/preferences" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.HikeListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_label"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.ProfileActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter android:label="@string/set_profile_pic">
                <action android:name="android.intent.action.ATTACH_DATA" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsb.hike.cropimage.CropImage"
            android:theme="@style/NoTitleBar" />
        <activity android:name="com.bsb.hike.ui.CreditsActivity" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.WebViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
       
        <activity
            android:name="com.bsb.hike.ui.ShareLocation"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.TellAFriend"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name="com.bsb.hike.ui.SettingsActivity" >
        </activity>
        <activity android:name="com.bsb.hike.ui.ConnectedAppsActivity"
            android:configChanges="orientation" >
        </activity>
        <activity android:name="com.bsb.hike.ui.HikeAuthActivity" 
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"  >
            <intent-filter>
			    <action android:name="com.bsb.hike.ui.HikeAuthActivity" />
			    <category android:name="android.intent.category.DEFAULT" />
			  </intent-filter>
        </activity>
        <activity
            android:name="com.bsb.hike.ui.TwitterAuthActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.StatusUpdate"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.SocialNetInviteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name="com.bsb.hike.ui.GalleryActivity" >
        </activity>
         <activity android:name="com.bsb.hike.ui.HikeSharedFilesActivity" >
        </activity>
        
        <activity android:name="com.bsb.hike.ui.GallerySelectionViewer" >
        </activity>
        <activity android:name="com.bsb.hike.ui.CountrySelectActivity" >
        </activity>
        <activity android:name="com.bsb.hike.ui.StickerShopActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity android:name="com.bsb.hike.ui.StickerSettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.FileSelectActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.SharedOtherFilesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.CreateNewGroupActivity"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.PeopleActivity" 
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.TimelineActivity" 
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
         <activity
            android:name="com.bsb.hike.ui.FtueCardsActivity"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:theme="@style/NoTitleBar" >
        </activity>
        <activity
            android:name="com.bsb.hike.ui.PinHistoryActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden">            
        </activity>         
        <activity
    		android:name="com.haibison.android.lockpattern.LockPatternActivity"
    		android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
    		android:screenOrientation="user"
    		android:theme="@style/LockPatternTheme" />
            <receiver android:name=".service.BootService" >
                <intent-filter>
                    <action android:name="android.intent.action.BOOT_COMPLETED" />
                </intent-filter>
                <intent-filter>
                    <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                </intent-filter>
                <intent-filter>
                    <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
                </intent-filter>
            </receiver>
            <receiver android:name="com.bsb.hike.service.AppUpdatedReceiver" >
                <intent-filter>
                    <action android:name="android.intent.action.PACKAGE_REPLACED" />

                    <data android:scheme="package" />
                </intent-filter>
            </receiver>
            <receiver android:name="com.bsb.hike.service.LocaleChangeReceiver" >
                <intent-filter>
                    <action android:name="android.intent.action.LOCALE_CHANGED" />
                </intent-filter>
            </receiver>
            <receiver
                android:name="com.google.android.gcm.GCMBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND" >
                <intent-filter>
                    <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                    <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                    <category android:name="com.bsb.hike" />
                </intent-filter>
            </receiver>
            <receiver
                android:name="com.bsb.hike.service.SMSBroadcastReceiver"
                android:enabled="true"
                android:exported="true" >
                <intent-filter android:priority="2147483647" >
                    <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                </intent-filter>
            </receiver>
            <receiver android:name="com.bsb.hike.service.TimeChangedReceiver" >
                <intent-filter android:priority="999" >
                    <action android:name="android.intent.action.TIME_SET" />
                </intent-filter>
            </receiver>
            <receiver android:name="com.bsb.hike.notifications.NotificationDismissedReceiver" 
                android:exported="false">
            </receiver>

         <activity
            android:name="com.bsb.hike.ui.DeleteAccount"
            android:windowSoftInputMode="stateHidden"            
            android:label="@string/app_label"
            android:launchMode="singleTop">
        </activity>
            
            <activity
                android:name="com.facebook.LoginActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" />

            <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/fb_app_id" />
            <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="@string/unobfuscated_map_api" />
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />

        <receiver android:name=".service.SmsMessageStatusReceiver" />
        <receiver
            android:name=".service.AppTrackerReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver android:name=".service.AlarmBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.bsb.hike.START_ALARM" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.bsb.hike.providers.HikeProvider"
            android:authorities="com.bsb.hike.providers.HikeProvider"
            android:exported="true">
        </provider>
	 <receiver
            android:name=".service.ConnectionChangeReceiver"
            android:label="NetworkConnection" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <service android:name=".service.SimpleWakefulService" >
        </service>
    </application>

</manifest>
